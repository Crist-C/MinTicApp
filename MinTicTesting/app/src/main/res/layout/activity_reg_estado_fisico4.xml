<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trail_running1"
    android:backgroundTint="@color/primaryColor"
    android:backgroundTintMode="multiply"
    tools:context=".registro.reg_estado_fisico4">

    <TextView
        android:id="@+id/tvPracticaAlgunDeporte"
        style="@style/TittleText"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="@dimen/longSpace"
        android:layout_marginTop="96dp"
        android:text="@string/estadoFisico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/tbGroup1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPracticaAlgunDeporte"
        app:singleSelection="true">

        <Button
            android:id="@+id/bExcelente"
            style="@style/OutlineButton"
            android:layout_marginHorizontal="0dp"
            android:text="@string/excelente" />

        <Button
            android:id="@+id/bBueno"
            style="@style/OutlineButton"
            android:layout_marginHorizontal="0dp"
            android:text="@string/bueno" />

        <Button
            android:id="@+id/bNotanBueno"
            style="@style/OutlineButton"
            android:layout_marginHorizontal="0dp"
            android:text="@string/no_tan_bueno" />

        <Button
            android:id="@+id/bRealizoOtrasActividades"
            style="@style/OutlineButton"
            android:layout_marginHorizontal="0dp"
            android:text="@string/realizo_otras_acividades" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/tvPreguntaEstatura"
        style="@style/TittleText"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="@dimen/longSpace"
        android:layout_marginTop="@dimen/middleSpace"
        android:text="@string/ingresa_tu_estatura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf=""
        app:layout_constraintTop_toBottomOf="@id/tbGroup1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvPreguntaPeso"
        style="@style/TittleText"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="@dimen/longSpace"
        android:layout_marginTop="96dp"
        android:text="@string/ingresa_tu_peso_aproximado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf=""
        app:layout_constraintTop_toBottomOf="@id/tvPreguntaEstatura"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>