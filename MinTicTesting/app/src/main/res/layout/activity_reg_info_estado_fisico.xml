<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".regInfoEstadoFisico">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/trailrunnin2"
        android:backgroundTint="@color/darkColor"
        android:backgroundTintMode="multiply"
        tools:context=".Registro"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="228dp" >

        <Button
            android:id="@+id/containedButton2"
            android:layout_width="314dp"
            android:layout_height="42dp"
            android:text="Algunos dias a la semana"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="286dp" />

        <Button
            android:id="@+id/containedButton3"
            android:layout_width="314dp"
            android:layout_height="42dp"
            android:text="Una sola vez a la semana"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="348dp" />

        <Button
            android:id="@+id/containedButton4"
            android:layout_width="314dp"
            android:layout_height="42dp"
            android:text="Cada quince dias"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="411dp" />

        <Button
            android:id="@+id/containedButton5"
            android:layout_width="314dp"
            android:layout_height="42dp"
            android:text="Ocasionalmente"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="466dp" />

        <Button
            android:id="@+id/containedButton6"
            android:layout_width="314dp"
            android:layout_height="42dp"
            android:text="Nunca"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="527dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Con que frecuencia realizas \nalgun deporte?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/containedButton"
        android:layout_width="314dp"
        android:layout_height="42dp"
        android:text="Todos los dias"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.217" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button 1"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button 2"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button 3"
            style="?attr/materialButtonOutlinedStyle"
            />


    </com.google.android.material.button.MaterialButtonToggleGroup>
</androidx.constraintlayout.widget.ConstraintLayout>