<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraints"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/trailrunnin2"
    android:backgroundTint="@color/highLightColor"
    android:backgroundTintMode="multiply">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilUsuario"
        style="@style/ThemeTextInputLayout"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/labelUsuario"
        app:helperText="@string/helpTextUsuario"
        app:layout_constraintBottom_toTopOf="@+id/tilContrase単a"
        app:layout_constraintEnd_toEndOf="@+id/bLogin"
        app:layout_constraintStart_toStartOf="@+id/bLogin"
        app:startIconDrawable="@drawable/ic_baseline_person_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilContrase単a"
        style="@style/ThemeTextInputLayout"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:hint="@string/labelContrase単a"
        app:endIconMode="password_toggle"
        app:helperText="@string/helpTextPassword"
        app:layout_constraintBottom_toTopOf="@+id/bLogin"
        app:layout_constraintEnd_toEndOf="@+id/bLogin"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/bLogin"
        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etContrase単a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/longSpace"
        android:layout_marginEnd="@dimen/longSpace"
        android:layout_marginBottom="8dp"
        android:background="@color/highLightColor"
        android:text="@string/loginButtonText"
        app:layout_constraintBottom_toTopOf="@+id/bRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/longSpace"
        android:layout_marginEnd="@dimen/longSpace"
        android:layout_marginBottom="@dimen/xlongSpace"
        android:background="@color/highLightColor"
        android:text="@string/registroButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

