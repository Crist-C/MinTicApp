<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_DeporteRV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/shortSpace"
    android:layout_marginVertical="@dimen/middleSpace"
    app:cardCornerRadius="@dimen/shortSpace">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/shortSpace">

        <ImageView
            android:id="@+id/ivFotoV"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/shortSpace"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNombreV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nombre"
            android:textSize="@dimen/middleSpace"
            android:layout_marginTop="@dimen/middleSpace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivFotoV" />

        <TextView
            android:id="@+id/tvTelefonoV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3003409417"
            android:textSize="@dimen/middleSpace"
            android:layout_marginTop="@dimen/shortSpace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreV" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>