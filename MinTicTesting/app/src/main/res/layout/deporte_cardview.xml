<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Filled"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginVertical="@dimen/middleSpace">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/middleSpace">

        <HorizontalScrollView
            android:id="@+id/HSV_HScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="449dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivDeportePreview1V"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="@dimen/shortSpace"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/trail_running1" />

                <ImageView
                    android:id="@+id/ivDeportePreview2V"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="@dimen/shortSpace"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/trail_running2" />

                <ImageView
                    android:id="@+id/ivDeportePreview3V"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="@dimen/shortSpace"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/trail_running3" />

            </LinearLayout>
        </HorizontalScrollView>


        <Button
            android:id="@+id/tbDeporteTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Traill Running"
            android:gravity="left|center_vertical"
            app:icon="@drawable/ic_baseline_run_circle_24"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/bLike"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/HSV_HScrollView" />


        <TextView
            android:id="@+id/tvDeporteDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/TrailRunningDescription"
            android:textSize="14sp"
            android:maxLines="3"
            android:padding="@dimen/shortSpace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tbDeporteTitulo" />

        <HorizontalScrollView
            android:id="@+id/HSV_HScrollViewPistas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/tbDeportePistas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDeporteDescription">

            <LinearLayout
                android:id="@+id/lyLinearPreviewPistas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivDeportePistaPreview1V"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="@dimen/shortSpace"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/tr_pista_circuito_quilotoa" />

                <ImageView
                    android:id="@+id/ivDeportePistaPreview2V"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/shortSpace"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/tr_pista_cordillera_blanca" />

                <ImageView
                    android:id="@+id/ivDeportePistaPreview3V"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/shortSpace"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/tr_pista_cruze_los_andes" />

                <ImageView
                    android:id="@+id/ivDeportePistaPreview4V"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/shortSpace"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/tr_pista_valle_sagrado" />

                <ImageView
                    android:id="@+id/ivDeportePistaPreview5V"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/shortSpace"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/trail_running6" />

            </LinearLayout>

        </HorizontalScrollView>

        <Button
            android:id="@+id/tbDeportePistas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Pistas"
            android:gravity="left|center_vertical"
            app:icon="@drawable/ic_baseline_run_circle_24"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/HSV_HScrollViewPistas"
            app:layout_constraintTop_toBottomOf="@id/tvDeporteDescription" />

        <Button
            android:id="@+id/bLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            app:icon="@drawable/ic_baseline_accessibility_new_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/HSV_HScrollView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>